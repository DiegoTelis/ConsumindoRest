@model List<TodoModel>
@{
    ViewData["Title"] = "Página Lista";
}

<div class="text-center">
    
<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        <div class="input-group input-group-sm mb-3">
          <div class="input-group-prepend">
            <input type="submit" value="Filter" class="input-group-text" id="inputGroup-sizing-sm" />
          </div>
          <input type="text" name="SearchString"  class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
        </div>
    </p>
</form>

<div class="row">
<img src="https://brgaap.com/paginas/assets/img/home/Logo_banner_principal.png" class="col-md-4"/>
</div>
 <br/><br/>
 <h3>Consumindo REST TODOS</h3>

 @if (TempData["MenssagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close" >X</button>
            @TempData["MenssagemSucesso"]
        </div>
    }
    @if (TempData["MenssagemErro"] != null) 
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MenssagemErro"])
        </div>
    }

  <div class="row">
       <div class="col align-self-center">
         
       </div>
       <div class="col align-self-end">
        <a class="btn btn-secundary" role="button" asp-controller="Home" asp-action="BaixarDefaltToBD" >Default</a>
       </div>
  </div>

 <table id="dtTodos" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
     <thead>
         <tr>
             <th>
                 @Html.DisplayNameFor(model => model[0].id)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model[0].title)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model[0].completed)
             </th>
             <th></th>
         </tr>
     </thead>
     <tbody>
            @foreach (var item in Model)
            {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => item.id)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.title)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.completed)
                     </td>
                     <td>
                         <a role="button" class="btn btn-info" asp-route-id="@item.id" asp-controller="Home" asp-action="Detalhes" >Detalhes</a>
                     </td>
                 </tr>

            }
        </tbody>
 </table>
